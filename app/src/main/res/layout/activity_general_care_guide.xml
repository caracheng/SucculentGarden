<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".generalCareGuide"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="GENERAL CARE"
        android:textAlignment="center"
        android:textColor="#AAC2A9"
        android:textSize="60sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/indoorcare"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="24dp"
            android:alpha="0.80"
            android:background="#A2AD99"
            android:text="Indoor care"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/outdoorcare"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="24dp"
            android:alpha="0.70"
            android:background="#A2AD99"
            android:text="outdoor care"
            android:textSize="24sp" />

        <Button
            android:id="@+id/warningsigns"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="24dp"
            android:alpha="0.70"
            android:background="#A2AD99"
            android:text="Warning Signs"
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>